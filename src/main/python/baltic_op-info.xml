<!-- This XML file describes the interface of the python operator. It defines the required source product(s) and the parameters
     for the processing. By using the information of this file the graphical user interface is automatically generated and also
     the help on the command line is derived from the information provided here.
-->
<operator>
    <!-- The name uniquely identifies the operator within SNAP -->
    <name>org.esa.snap.snap.baltic.BalticOp</name>
    <!-- The alias is a more user-friendly name, e.g. to be used on the command line -->
    <alias>balticOp</alias>
    <operatorClass>org.esa.snap.python.gpf.PyOperator</operatorClass>

    <version>0.1</version>
    <authors>Brockmann Consult GmbH</authors>
    <copyright>(C) 2020 ESA, Brockmann Consult GmbH</copyright>

    <description>Operator for Baltic+ Atmospheric correction.</description>

    <namedSourceProducts>
        <!-- One or more source products can be specified.
             In the GUI only one is currently supported. On the command line multiple source products
             can be specified by referencing them with the here defined names.
         -->
        <sourceProduct>
            <name>sourceProduct</name>
        </sourceProduct>
    </namedSourceProducts>
    <autoWriteSuppressed>true</autoWriteSuppressed>
    <parameters>

        <parameter>
            <name>format</name>
            <description>Format of the targetProduct</description>
            <dataType>String</dataType>
            <defaultValue>BEAM-DIMAP</defaultValue>
        </parameter>

        <parameter>
            <name>outputPath</name>
            <description>Location to write targetProduct</description>
            <dataType>String</dataType>
            <defaultValue>None</defaultValue>
        </parameter>

        <parameter>
        <name>useIdepix</name>
        <description>If set to true, then Idepix calculation is performed</description>
        <dataType>Boolean</dataType>
        <defaultValue>False</defaultValue>
        </parameter>

        <parameter>
            <name>NNIOPversion</name>
            <description>NNIOPversion</description>
            <dataType>String</dataType>
            <defaultValue>c2rcc_20171221</defaultValue>
        </parameter>

        <parameter>
            <name>NNversion</name>
            <description>NNversion</description>
            <dataType>String</dataType>
            <defaultValue>baltic+_v1</defaultValue>
        </parameter>

        <parameter>
            <name>amposphericAuxDataPath</name>
            <description>amposphericAuxDataPath</description>
            <dataType>String</dataType>
            <defaultValue>None</defaultValue>
        </parameter>

    </parameters>
</operator>